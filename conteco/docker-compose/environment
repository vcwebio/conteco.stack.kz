#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS='stack.kz'
export CONTECO_DC_GLOBAL_STACKNAMES="kz"
export CONTECO_DC_GLOBAL_VOLUME_LIST="kafka_volume,zookeeper_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_STACK_STACKS='kafka.base,zookeeper.base'
export CONTECO_DC_GLOBAL_STACK_STACKNAMES="kafka,zookeeper"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_TYPE}_kafka_volume: { external: true },${DOLLAR}{CONTECO_TYPE}_zookeeper_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS kafka.base
export CONTECO_DC_KZ_KAFKA_KAFKA_ADVERTISED_LISTENERS=",HOST://localhost:29092"
export CONTECO_DC_KZ_KAFKA_KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=",HOST:PLAINTEXT"
export CONTECO_DC_KZ_KAFKA_PORTS="29092:29092"
export CONTECO_DC_KZ_KAFKA_VOLUMES="'${CONTECO_TYPE}_kafka_volume:/var/lib/kafka/data'"
export CONTECO_DC_KZ_KAFKA_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_KZ_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_KZ_KAFKA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_KZ_KAFKA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kafka.base

# START SETTINGS zookeeper.base
export CONTECO_DC_KZ_ZOOKEEPER_VOLUMES="'${CONTECO_TYPE}_zookeeper_volume:/var/lib/zookeeper/data'"
export CONTECO_DC_KZ_ZOOKEEPER_DEPLOY_LABELS=
export CONTECO_DC_KZ_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_KZ_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_KZ_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_KZ_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS zookeeper.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
